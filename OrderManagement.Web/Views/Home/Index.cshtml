@model dynamic

@{
    ViewData["Title"] = "Home Dashboard";
}

<div class="hero-banner text-center mb-4">
    <h1><i class="fas fa-rocket me-2"></i>Welcome to Order Management</h1>
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <p class="lead">Hello, @User.Identity.Name! Take control with our sleek dashboard.</p>
        <a asp-controller="Orders" asp-action="Index" class="btn btn-light btn-lg"><i class="fas fa-eye me-2"></i>View Orders</a>
    }
    else
    {
        <p class="lead">Streamline your order management today!</p>
        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-light btn-lg"><i class="fas fa-sign-in-alt me-2"></i>Get Started</a>
    }
</div>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card card-hover text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-shopping-cart me-2"></i>Total Orders</h5>
                    <p class="card-text display-6">@Model.TotalOrders</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-light">View All</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-hover text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-check-circle me-2"></i>Paid Orders</h5>
                    <p class="card-text display-6">@Model.PaidOrders</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-light">View Paid</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-hover text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-clock me-2"></i>Pending Orders</h5>
                    <p class="card-text display-6">@Model.PendingOrders</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-light">View Pending</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5><i class="fas fa-chart-bar me-2"></i>Order Status Distribution</h5>
        </div>
        <div class="card-body">
            <canvas id="orderStatusChart" style="max-height: 300px;"></canvas>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5><i class="fas fa-list me-2"></i>Recent Orders</h5>
        </div>
        <div class="card-body">
            <table id="recentOrdersTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Items</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td>@order.OrderDate.ToShortDateString()</td>
                            <td>@order.CustomerName</td>
                            <td>@(order.IsPaid ? "Paid" : "Pending")</td>
                            <td>@order.ItemCount</td>
                            <td>
                                @if (!string.IsNullOrEmpty(order.FirstItemImage))
                                {
                                    <img src="@order.FirstItemImage" alt="First Item" class="img-thumbnail" style="max-width: 50px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal_@order.Id"><i class="fas fa-trash"></i></button>
                                }
                            </td>
                        </tr>
                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Delete Modal -->
                            <div class="modal fade" id="deleteModal_@order.Id" tabindex="-1" aria-labelledby="deleteModalLabel_@order.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteModalLabel_@order.Id">Confirm Delete</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete this order for @order.CustomerName?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <form asp-controller="Orders" asp-action="Delete" asp-route-id="@order.Id" method="post">
                                                <input type="submit" value="Delete" class="btn btn-danger" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(document).ready(function () {
            $('#recentOrdersTable').DataTable({
                paging: false,
                searching: false,
                ordering: true,
                info: false,
                lengthChange: false
            });

            // Chart.js for Order Status Distribution
            var ctx = document.getElementById('orderStatusChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Paid', 'Pending'],
                    datasets: [{
                        label: 'Order Status',
                        data: [@Model.PaidOrders, @Model.PendingOrders],
                        backgroundColor: ['#28a745', '#ffc107'],
                        borderColor: ['#218838', '#e0a800'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { stepSize: 1 }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        title: { display: true, text: 'Order Status Distribution' }
                    }
                }
            });
        });
    </script>
}