@model OrderManagement.Web.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="card">
    <div class="card-header">
        <h4><i class="fas fa-info-circle me-2"></i>Order Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.OrderDate)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.OrderDate)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CustomerName)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.CustomerName)</dd>
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IsPaid)</dt>
            <dd class="col-sm-10">@(Model.IsPaid ? "Paid" : "Pending")</dd>
        </dl>
        <h5 class="mt-4">Order Items</h5>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OrderItems[0].ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.OrderItems[0].Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.OrderItems[0].Price)</th>
                    <th>@Html.DisplayNameFor(model => model.OrderItems[0].ImagePath)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" alt="Product Image" class="img-thumbnail" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @await Component.InvokeAsync("OrderSummary", new { order = Model })
    </div>
    <div class="card-footer">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit me-2"></i>Edit</a>
        }
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
    </div>
</div>